{% set title = property('title', {'type': 'string', 'label': 'Title'}) %}

{% set accordions = collection(set(
    property('title', {'type': 'inline_string', 'label': 'Title'}),
    property('text',  {'type': 'html', 'label': 'Text'})
)) %}

<section class="accordion block" data-require="plugins/blocks/accordion" data-attach="$.fn.accordion" data-refresh-event="accordion">
	
	{% if not isPropertyEmpty('title') or supraPage.cmsRequest %}
		<h2 class="block-title {% if isPropertyEmpty('title') %}hidden{% endif %}">
			{{ title }}
		</h2>
	{% endif %}
	
	<div class="accordion-inner">
		{% for accordion in accordions %}
		
			<div class="accordion-item">
				<h5 class="accordion-heading">
					<span class="arrow"></span>
					
					{% if supraPage.cmsRequest %}
						{{ accordion.title | raw }}
					{% else %}
						<a href="#accordion-{{ loop.index }}">{{ accordion.title | raw }}</a>
					{% endif %}
				</h5>
				
				<div class="accordion-content text clearfix" name="accordion-{{ loop.index }}">
					{{ accordion.text | raw }}
				</div>
			</div>
			
		{% endfor %}
	</div>
	
</section>
