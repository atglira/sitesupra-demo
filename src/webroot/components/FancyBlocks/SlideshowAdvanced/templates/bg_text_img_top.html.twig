<li class="{% if property.hidden %}hidden{% endif %} {{ property.theme }}">
	{% if property.background_color %}
		<div class="as-layer absolute as-background-color" style="background-color: {{ property.background_color }}"></div>
	{% endif %}
	{% if property.background %}
		<div class="as-layer absolute as-background">
			<img src="{{ property.background }}" />
		</div>
	{% endif %}
	{% if property.mask_image %}
		<div class="as-layer absolute as-mask" style="background-image: url({{ property.mask_image }})"></div>
	{% endif %}
	<div class="as-wrapper as-align-center" {% if property.height %}style="min-height: {{ property.height }}px;"{% endif %} data-supra-item-height="true">
		<div class="as-layer as-layer-center as-layer-top">
			{{ property.text_main|raw  }}
			<div class="as-layer buttons" data-supra-item-property="buttons">
				{{ property.buttons|raw }}
			</div>
		</div>
		<div class="as-layer as-layer-center as-layer-bottom as-layer-{{ property.mediaType|raw }}">
			{{ property.media|raw }}
		</div>
		{% if property.buttons_overlay %}
			{{ property.buttons_overlay|raw }}
		{% endif %}
	</div>
</li>