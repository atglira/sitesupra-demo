<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="Generator" content="SiteSupra&reg; http://www.sitesupra.com" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	
	<title>{{ supraPage.page.title }}</title>
	
	{# @TODO: assetic to be used here.
		Need to deal with how to automatically obtain the URL of package.
	 #}
	
	<link rel="shortcut icon" href="/favicon.ico">
	<link rel="stylesheet" href="/public/sample/assets/css/main.css" type="text/css" />
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Exo+2:300,300italic,regular,italic,700,700italic&amp;subset=latin,cyrillic-ext,latin-ext,cyrillic" />
</head>
<body>
	{% block intro %}
	{% endblock %}
	
	<header class="header">
		<div class="wrapper">
			<div class="pure-g">
				<div class="pure-u pure-u-1-1 pure-u-md-7-24 pure-u-lg-7-24 pure-u-xl-7-24">
					
					{# Logo #}
					<div class="logo">
						<a href="/">SAMPLE</a>
					</div>
					
				</div>
				<div class="pure-u pure-u-1-1 pure-u-md-17-24 pure-u-lg-17-24 pure-u-xl-17-24">
					{{ placeHolder('header') }}
				</div>
			</div>
		</div>
	</header>

	{% block body %}
	<section class="content">
		<div class="wrapper">
			{% block content %}
				{{ placeHolder('content') }}
			{% endblock %}
		</div>
	</section>
	{% endblock %}

	<footer class="footer">
		<div class="wrapper">
			{{ placeHolder('footer') }}
		</div>
	</footer>

	<script src="/public/sample/assets/js/lib/require-jquery.js" data-main="/public/sample/assets/js/index"></script>
</body>
