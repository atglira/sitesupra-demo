{% if posts %}
<div class="block blog-list blog-list-short">
	
	{% set heading_class = 'no-heading' %}
	{% set title_empty = supraBlock.isEmpty('block_title') %}
	{% if supra.cmsRequest or not title_empty %}
	<h2 class="block-title {% if title_empty %}hidden{% endif %}"><div>
		{{ supraBlock.property('block_title') }}
		{% if not title_empty %}
			{% set heading_class = 'has-heading' %}
		{% endif %}
	</div></h2>
	{% endif %}
	
	<section class="{{ heading_class }}" {% if supra.cmsRequest %}data-refresh-event="blog"{% endif %}>
		
		{% for post in posts %}
			
			<article class="clearfix {% if post.media %}has-media{% endif %}">
				
				{# Image or video #}
				{% if post.media %}
					<figure class="media">
						{{ post.media }}
					</figure>
				{% endif %}
				
				{# Heading #}
				<header>
					{# Date #}
					<time datetime="{{ post.date.format('Y-m-d') }}">{{ post.date.format('d/m/Y') }}</time>
					
					{# Title #}
					<h3><a href="/{{ supra.locale.id }}{{ post.path }}">{{ post.title }}</a></h3>
				</header>
				
				{# Description #}
				<p>{{ post.description }}</p>
			</article>
			
		{% endfor %}
		
	</section>
	
</div>
{% endif %}