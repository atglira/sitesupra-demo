{% block bodyClass %}loading{% endblock %}
{% extends 'template/index.html.twig' %}

{% block jsSupraDataSet %}
	//Page which will be initially loaded
	'page': {
		'id': {{ pageLocalizationId | json_encode | raw }}
	},

	//Supra.HTMLEditor + plugins
	'supra.htmleditor': {
		'stylesheets': {
			'skip_default': false
		},
		'fonts': [
			{"title": "Arial",				"family": "Helvetica, Arial"},
			{"title": "Alice",				"family": "Alice",				"apis": "Alice"},
			{"title": "Copse",				"family": "Copse",				"apis": "Copse"},
			{"title": "Noticia Text",		"family": "Noticia Text",		"apis": "Noticia+Text:400,400italic,700"},
			{"title": "Open Sans",			"family": "Open Sans",			"apis": "Open+Sans:400italic,400,700"},
			{"title": "PT Sans",			"family": "PT Sans",			"apis": "PT+Sans:400,700,400italic"},
			{"title": "Ubuntu",				"family": "Ubuntu",				"apis": "Ubuntu:400,700,400italic"},
			{"title": "UnifrakturMaguntia",	"family": "UnifrakturMaguntia",	"apis": "UnifrakturMaguntia"}
		],
		'plugins': {
			'image': {
				'size': '200x200',
				'styles': false
			},
			'gallery': {
				'galleryBlockId': {% if galleryBlockId%}{{ galleryBlockId | json_encode | raw }}{% else %}null{% endif %}
			}
		}
	},

	//Gallery manager
	'gallerymanager': {
		'properties': [
			{'id': 'title', 'type': 'String', 'label': 'Title', 'value': ''},
			{'id': 'description', 'type': 'String', 'label': 'Description', 'value': ''}
		]
	},
	
	// Allow/disallow "Limited access" toggle option inside page settings
	'allowLimitedAccessPages': {{ allowLimitedAccessPages }},
	
{% endblock %}
