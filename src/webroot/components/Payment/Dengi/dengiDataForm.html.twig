<section>
	<h2>{{ 'Выберите вид платежа'|trans }}:</h2>

	{# Form with class "payment-method" labels will trigger submit on click #}
	<form action ="{{ action }}" method="post" enctype="application/x-www-form-urlencoded" class="payment-method">

	{% if errorMessages %}
	<ul> 
		{% for errorMessage in errorMessages %}
			<li>{{ errorMessage | raw }}</li>
		{% endfor %}
	</ul>
	{% endif %}

	{% for formElement in formElements %} 

		{{ formElement | raw }}

	{% endfor %} 

	<img src="/assets/images/payment-card-mastercard.png" alt="MasterCard" class="payment-icon" />
	<img src="/assets/images/payment-card-visa.png" alt="VISA" class="payment-icon" />

	<input type="submit" value="Send" />

		</form>
</section>
