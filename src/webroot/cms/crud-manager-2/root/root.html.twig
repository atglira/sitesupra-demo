{% extends 'template/index.html.twig' %}

{#% block jsModulePath %}'/modules'{% endblock %#}

{% block jsSupraDataSet %}
//CRUD manager configuration
'crudManager': {
	'providerId': {{ providerId | default(null) | json_encode }}
},

// HTML editor configuration
'supra.htmleditor': {
	'standalone': {% spaceless %}
	{% if manager.standaloneHtmlEditorParameters is not empty %}
		{{ manager.standaloneHtmlEditorParameters | json_encode | raw }} 
	{% else %} 
	{# default values #} {
		'stylesheets': [
			'/assets/css/normalize.css',
			'/assets/css/main.css'
		]
	}
	{% endif %}
	{% endspaceless %},
	'stylesheets': {
		'skip_default': false
	},
	'plugins': {
		'image': {
			'size': '200x200',
			'styles': false
		},
		'video': false,
		'link': true,
		'image': false,
		'icon': false,
		'fonts': false
	}
},
{% endblock %}

{% block jsPathConfiguration %}
	var APP_PATH = '/crud-manager',
		STATIC_PATH = '/cms',
		DYNAMIC_PATH = '/{{ constant('SUPRA_CMS_URL') }}';

	//Set current manager paths
	Supra.Manager.Loader.setStaticPath(STATIC_PATH);
	Supra.Manager.Loader.setDynamicPath(DYNAMIC_PATH);

	Supra.Manager.Loader.setBasePath(APP_PATH);

	Supra.setModuleGroupPath('website', STATIC_PATH + APP_PATH + '/modules');
{% endblock %}
