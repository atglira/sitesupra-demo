<li {% if hidden %}class="hidden"{% endif %}>
	{% if property.background %}
		<img class="as-layer absolute as-background" src="{{ property.background }}" />
	{% endif %}
	<div class="as-wrapper clearfix" {% if property.height %}style="min-height: {{ property.height }}px;"{% endif %} data-supra-item-height="true">
		<div class="as-layer as-layer-left-large as-layer-{{ property.mediaType|raw }}">
			{{ property.media|raw }}
		</div>
		<div class="as-center" {% if property.height %}style="min-height: {{ property.height }}px;"{% endif %} data-supra-item-height="true"></div>
		<div class="as-layer as-layer-right-small">
			{{ property.text_main|raw }}
			<div class="as-layer buttons" data-supra-item-property="buttons">
				{{ property.buttons|raw }}
			</div>
		</div>
	</div>
</li>