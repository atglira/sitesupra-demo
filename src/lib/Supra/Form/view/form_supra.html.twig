{% extends 'lib/Symfony/Bridge/Twig/Resources/views/Form/form_div_layout.html.twig' %}

{% block file_id_widget %}
	{% if multiple %}
		{% if value is null or value is empty %}
			
		{% else %}
			<ul>
			{% for file in value %}
				<li><strong>{{ file.filename }}</strong> ({{ file.size }}b)</li>
			{% endfor %}
			</ul>
		{% endif %}
	{% else %}
		{% if value is null %}
			
		{% else %}
			<ul><li><strong>{{ value.filename }}</strong> ({{ value.size }}b)</li></ul>
		{% endif %}
	{% endif %}
{% endblock %}
