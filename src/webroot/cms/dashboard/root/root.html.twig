{% extends 'template/index.html.twig' %}
{% block jsPathConfiguration %}
	var APP_PATH = '/dashboard',
		STATIC_PATH = '/cms',
		DYNAMIC_PATH = '/{{ constant('SUPRA_CMS_URL') }}';

	//Set current manager paths
	Supra.Manager.Loader.setStaticPath(STATIC_PATH);
	Supra.Manager.Loader.setDynamicPath(DYNAMIC_PATH);

	Supra.Manager.Loader.setBasePath(APP_PATH);

	Supra.setModuleGroupPath('website', STATIC_PATH + APP_PATH + '/modules');
{% endblock %}
{% block jsSupraManager %}
	//Start loading actions
	Supra.Manager.loadActions(['Header', 'Root', 'LayoutContainers']);
	
	//Execute initial actions
	Supra.Manager.executeAction('Header');
	Supra.Manager.executeAction('Root');
	
	{% if show_welcome %} 
		Supra.Manager.executeAction('Welcome');
	{% endif %}
		
	{% if show_site_list %} 
		Supra.Manager.executeAction('Sites');
	{% endif %}
		
{% endblock %}