{% extends 'template/index.html.twig' %}

{#% block jsModulePath %}'/modules'{% endblock %#}

{% block jsSupraDataSet %}
//CRUD manager data paths
'crudManagerPaths': {
	'configuration': {{path | json_encode | raw}} + 'data/configuration.json',
	'datalist': {{path | json_encode | raw}} + 'data/datalist.json',
	'save': {{path | json_encode | raw}} + 'form/save.json',
	'delete': {{path | json_encode | raw}} + 'form/delete.json',
	'sort': {{path | json_encode | raw}} + 'form/sort.json'
},
'supra.htmleditor': {
	'standalone': {
		'stylesheets': [
			'/assets/css/normalize.css',
			'/assets/css/main.css'
		]
	},
	'stylesheets': {
		'skip_default': false
	},
	'plugins': {
		'image': {
			'size': '200x200',
			'styles': false
		}
	}
},
{% endblock %}

{% block jsPathConfiguration %}
	var APP_PATH = '/crud-manager',
		STATIC_PATH = '/cms',
		DYNAMIC_PATH = '/cms';

	//Set current manager paths
	Supra.Manager.Loader.setStaticPath(STATIC_PATH);
	Supra.Manager.Loader.setDynamicPath(DYNAMIC_PATH);

	Supra.Manager.Loader.setBasePath(APP_PATH);

	Supra.setModuleGroupPath('website', STATIC_PATH + APP_PATH + '/modules');
{% endblock %}