<!DOCTYPE html>
<html>
	<head>
		<title>View page</title>
	</head>
	<body>
		{% if tabs %}
			<h2>Page tabs:</h2>
			<ul>
			{% for tab in tabs %}
				<li><a href="/social/edit-tab?tab_id={{tab.id}}">{{ tab.title }}</a> | <a href="/social/delete-tab?tab_id={{tab.id}}">Delete</a></li>
			{% endfor %}
			</ul>
		{% endif %}
		
		<a href="/social/create-tab?page_id={{ page.id }}">Create new tab for page "{{page.name}}"</a>
	</body>
</html>