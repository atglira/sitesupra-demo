{% block bodyClass %}loading{% endblock %}
{% extends 'template/index.html.twig' %}

{% block jsSupraDataSet %}
	//Page which will be initially loaded
	'page': {
		'id': {{ pageLocalizationId | json_encode | raw }}
	},

	//Supra.HTMLEditor + plugins
	'supra.htmleditor': {
		'stylesheets': {
			'skip_default': false
		},
		
		'plugins': {
			'image': {
				'size': '200x200',
				'styles': false
			},
			'gallery': {
				'galleryBlockId': {% if galleryBlockId%}{{ galleryBlockId | json_encode | raw }}{% else %}null{% endif %}
			}
			{% for pluginId, pluginConfig in config.htmlEditorPlugins %}
				, {{ pluginId | json_encode | raw }}: {{ pluginConfig | json_encode | raw }}
			{% endfor %}
		}
	},
	
	{% if themeName is defined %}
	//Design manager
	'design': '{{ themeName }}',
	{% endif %}
	
	// Allow/disallow "Limited access" toggle option inside page settings
	'allowLimitedAccessPages': {{ allowLimitedAccessPages | json_encode | raw }},
	'keywordSuggestionEnabled': {{ keywordSuggestionEnabled | json_encode | raw }},
	
{% endblock %}
