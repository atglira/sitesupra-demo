<!-- {{ comment }} -->
{% set design = supraBlock.property('design') %}

<div class="block">

	{% if not supraBlock.isEmpty('block_title') %}
	<h2 class="block-title"><div>
		{{ supraBlock.property('block_title') }}
		{% set heading_class = 'has-heading' %}
	</div></h2>
	{% endif %}
	
	<div data-refresh-event="text" class="text {{ heading_class}} {% if design %}{{ design }}{% endif %}">
		<div class="text-inner clearfix">
	
			{% if design == "simple" or design == "promo_3" %}
			
				{{ supraBlock.property('content') }}
			
			{% elseif design == "promo_1" %}
			
				{{ supraBlock.property('content') }}
				{{ supraBlock.property('content_2') }}
			
			{% elseif design == "promo_2" %}
			 
				<div class="two_thirds alpha">
					{{ supraBlock.property('content') }}
				</div><div class="one_third omega">
					{{ supraBlock.property('content_2') }}
				</div>
				<div class="clear"><!-- --></div>
				
			{% endif %}
			
			<div class="decoration"></div>
		</div>
	</div>
</div>