<div>
	<h3>{{ property('title') }}</h3>
</div>

<div class="pure-g">
	{% for imageTag in property('imageGallery') %}

		<div class="pure-u-1-3">
			{{ imageTag.setWidth(280).setHeight(280).setCrop(true) | raw }}
		</div>

		{% if loop.index0 > 0 and loop.index0 % 2 == 0 %}
			</div><div class="pure-g">
		{% endif %}
	{% endfor %}
</div>


{# Instructions how to render item in CMS Gallery manager edit mode #}
{% if supra.cmsRequest %}{% raw %}
<script type="text/supra-template" data-supra-container-selector="ul" data-supra-id="gallerymanager-item">
	<li class="one_third">
		<span class="outer">
			<span class="img">
				<img src="about:blank" alt="" />
			</span>
		</span>
	</li>
</script>
{% endraw %}{% endif %}
