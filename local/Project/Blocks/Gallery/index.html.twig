{# Preload #}
{% for image in supraBlock.property('images') %}
	{{ supraBlock.preloadImage( image.imageId, 100, 100, true ) }}
{% endfor %}

<h2>Gallery</h2>

<ul class="gallery {% if supraBlock.property('design') %}design-{{ supraBlock.property('design') }}{% endif %}"> 
{% for image in supraBlock.property('images') %}
	<li>
		{{ supraBlock.imageHtmlTag( image.imageId, 100, 100, true ) | raw }}
		<h3>{{ image.property.title }}</h3>
		<p>{{ image.property.description }}</p>
		<a href="{{ image.property.link.getUrl }}">{{ image.property.link.getUrl }}</a>
	</li>
{% endfor %}
</ul>
